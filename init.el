;; Date functions

(defun now ()
  "Insert string for the current time formatted like '2:34 PM'."
  (interactive)                 ; permit invocation in minibuffer
  (insert (format-time-string "%D %-I:%M %p")))
;; 11/08/18 2:20 PM

(defun today ()
  "Insert string for today's date nicely formatted in American style,
e.g. Sunday, September 17, 2000."
  (interactive)                 ; permit invocation in minibuffer
  (insert (format-time-string "%A, %B %e, %Y")))
;; Thursday, November  8, 2018

(defun epoch ()
  " integer number of seconds since the epoch. "
  (interactive)                 ; permit invocation in minibuffer
  (insert (format-time-string "%s")))

;; Insert oracle bug url string. Used mostly in org mode
(defun obl (bugnum)
  "Insert oracle bug url string"
  (interactive "sEnter bug num=")                 ; permit invocation in minibuffer
  (insert " [[https://bug.oraclecorp.com/pls/bug/webbug_print.show?c_rptno=" bugnum "][BUG " bugnum "]] "))

